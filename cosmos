import urllib
import json

ean = input("Digite o EAN do produto: ")
headers = {'X-Cosmos-Token':'YOUR_API_COSMOS_KEY','Content-Type':'application/json','User-Agent':'Cosmos-API-Request'}
req      = urllib.request.Request(f'https://api.cosmos.bluesoft.com.br/gtins/{ean.strip()}.json', None, headers)
response = urllib.request.urlopen(req)
data     = json.loads(response.read())

# print(json.dumps(data, indent = 4))
print(f"Nome do item: {data['description']}")
print(f"Ean do item: {data['gtin']}")
print(f"Preço: {data['price']}, Preço médio: {data['avg_price']}")
print(f"Qtd da caixa: {data['gtins'][0]['commercial_unit']['quantity_packaging']}")
